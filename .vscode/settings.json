{
  "claude.contextFiles": [
    "PROJECT_SPECIFICATION.md",
    "DEVELOPMENT_GUIDE.md",
    "CLAUDE_CODE_WORKFLOW.md",
    "README.md"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.linting.enabled": true,
  "python.formatting.provider": "black",
  "chat.tools.terminal.autoApprove": {
    "git commit": true,
    "git add": true,
    "/^python -m pytest tests/test_crud/test_title_crud\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_crud/test_journal_crud\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_crud/test_user_stats_crud\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_integration/test_crud_integration\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_integration/test_crud_integration\\.py::TestFullCRUDIntegration::test_full_crud_flow_create_character_and_journal -xvs 2>&1 \\| head -100$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_integration/test_crud_integration\\.py::TestFullCRUDIntegration::test_full_crud_flow_create_character_and_journal -xvs 2>&1 \\| head -150$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/ -x 2>&1 \\| head -100$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/ -v --tb=short 2>&1 \\| tail -50$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "conda": true,
    "/^python -m pytest tests/test_core/test_events\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_core/test_config_loader\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^python -m pytest tests/test_models/test_event_log\\.py tests/test_models/test_item\\.py -v$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "sqlite3": true
  }
}
